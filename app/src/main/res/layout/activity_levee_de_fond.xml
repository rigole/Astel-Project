<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeveeDeFondActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:background="@drawable/arr"
            tools:context=".Inscription">
            <include
                android:id="@+id/appbarlayout"
                layout="@layout/action_bar_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/linear21"
                />

            <LinearLayout
                android:id="@+id/linear21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
               app:layout_constraintTop_toBottomOf="@id/appbarlayout"
                tools:ignore="MissingConstraints">

                <ImageView

                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/logo02"
                    android:layout_marginVertical="25dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/linear21"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:orientation="vertical"
                >



                <EditText
                    android:id="@+id/TxtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_round"
                    android:inputType="textEmailAddress"
                    android:hint="Nom et Prénom"

                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:textColor="#0C3C87"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="false">



                </android.support.design.widget.TextInputLayout>
                <EditText
                    android:id="@+id/jobs"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_round"
                    android:hint="Profession"
                    android:inputType="text"

                    android:textColor="#0C3C87"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"

                    />
                <EditText
                    android:id="@+id/tel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_round"
                    android:hint="Téléphone"
                    android:inputType="number"

                    android:textColor="#0C3C87"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"

                    />

                <EditText
                    android:id="@+id/ville"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_round"
                    android:hint="Ville"
                    android:inputType="text"

                    android:textColor="#0C3C87"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"

                    />
                <EditText
                    android:id="@+id/emqil"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_round"
                    android:hint="Votre email"
                    android:inputType="textEmailAddress"

                    android:textColor="#0C3C87"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="25dp"
                android:gravity="right"


                app:layout_constraintTop_toBottomOf="@id/linear22">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:linksClickable="false"
                    android:text=""
                    android:textColor="#fff"
                    app:layout_constraintTop_toBottomOf="@id/password"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/linear23"
                android:orientation="vertical"
                android:gravity="center">

                <android.support.v4.widget.ContentLoadingProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/loading"
                    android:layout_marginTop="30dp"
                    android:visibility="gone"

                    />

                <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Valider"
                    android:background="@drawable/roundlevee"
                    android:textColor="#ffff"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/subscribe"


                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent">



            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>